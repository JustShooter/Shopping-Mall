<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1658748871685-1" author="JustShooter">
        <createTable tableName="search_history">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_search_history"/>
            </column>
            <column name="user_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="time_stamp" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="search_method" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="search_value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="search_in_shop" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1658748871685-2" author="JustShooter">
        <createTable tableName="user">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="user_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="shop_owner_id" type="INT"/>
            <column name="roles" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1658748871685-3" author="JustShooter">
        <addUniqueConstraint columnNames="address_id" constraintName="uc_shopowner_address" tableName="shopowner"/>
    </changeSet>
    <changeSet id="1658748871685-4" author="JustShooter">
        <addUniqueConstraint columnNames="email" constraintName="uc_user_email" tableName="user"/>
    </changeSet>
    <changeSet id="1658748871685-5" author="JustShooter">
        <addUniqueConstraint columnNames="shop_owner_id" constraintName="uc_user_shop_owner" tableName="user"/>
    </changeSet>
    <changeSet id="1658748871685-6" author="JustShooter">
        <addUniqueConstraint columnNames="user_name" constraintName="uc_user_user_name" tableName="user"/>
    </changeSet>
    <changeSet id="1658748871685-7" author="JustShooter">
        <addForeignKeyConstraint baseColumnNames="shop_owner_id" baseTableName="user"
                                 constraintName="FK_USER_ON_SHOP_OWNER" referencedColumnNames="id"
                                 referencedTableName="shopowner"/>
    </changeSet>

</databaseChangeLog>