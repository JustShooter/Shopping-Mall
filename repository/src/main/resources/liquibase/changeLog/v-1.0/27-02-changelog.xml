<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1656523636953-1" author="JustShooter" context="init">
        <createTable tableName="category">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_category"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="1656523636953-2" author="JustShooter" context="init">
        <addColumn tableName="shop">
            <column name="category_id" type="INT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1656523636953-3" author="JustShooter" context="init">
        <addNotNullConstraint columnDataType="INT" columnName="category_id" tableName="shop"/>
    </changeSet>
    <changeSet id="1656523636953-4" author="JustShooter" context="init">
        <addUniqueConstraint columnNames="name" constraintName="uc_category_name" tableName="category"/>
    </changeSet>
    <changeSet id="1656523636953-5" author="JustShooter" context="init">
        <addForeignKeyConstraint baseColumnNames="category_id" baseTableName="shop" constraintName="FK_SHOP_ON_CATEGORY"
                                 referencedColumnNames="id" referencedTableName="category"/>
    </changeSet>

</databaseChangeLog>